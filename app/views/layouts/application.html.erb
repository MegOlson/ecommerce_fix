<!DOCTYPE html>
<html>
  <head>
    <title>Week3CodeReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to "Cart | Total items: #{ cart_items }", cart_path %></li>
        <li><%= link_to "See all products", products_path %></li>
        <% if current_user %>
          <li><%= current_user.email %></li>
          <li><%= link_to "Sign out", '/sign_out' %></li>
          <% if current_user.admin %>
            <li > <%= link_to "Admin", '/admin' %> </li>
          <% end %>
        <% else %>
          <li><%= link_to "Sign up", 'sign_up' %></li>
          <li><%= link_to "Sign in", '/sign_in' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <body>

  <div class="container">
    <% if flash[:notice] != nil %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:alert] != nil %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>
  </div>


    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
